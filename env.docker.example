# Docker Environment Configuration for UserReports
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://postgres:password@userreports-db:5432/userreports

# Redis Configuration
REDIS_HOST=userreports-redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Server Configuration
NODE_ENV=production
PORT=3001
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=7d

# GitLab Configuration
GITLAB_URL=https://your-gitlab-instance.com
GITLAB_ACCESS_TOKEN=your-gitlab-personal-access-token
GITLAB_PROJECT_IDS=1,2,3,4,5

# ClickUp Configuration
CLICKUP_API_TOKEN=your-clickup-api-token
CLICKUP_TEAM_ID=your-clickup-team-id
CLICKUP_SPACE_IDS=space1,space2,space3

# Sync Configuration
SYNC_INTERVAL_MINUTES=60
AUTO_SYNC_ENABLED=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_ENABLED=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
