# Production Environment Configuration  
# Copy to .env for production use:
# cp env.prod.example .env

# Compose Profiles (full production stack with proxy)
COMPOSE_PROFILES=prod,db,full

# Build Targets
BACKEND_BUILD_TARGET=backend-production
FRONTEND_BUILD_TARGET=frontend-production

# Environment
NODE_ENV=production
LOG_LEVEL=info

# Ports
FRONTEND_PORT=8080
FRONTEND_INTERNAL_PORT=8080

# Database (local)
DATABASE_URL=postgresql://postgres:changeme123@userreports-db:5432/userreports
POSTGRES_PASSWORD=changeme123

# Redis (local with password)
REDIS_HOST=userreports-redis
REDIS_PORT=6379
REDIS_PASSWORD=changeme456
REDIS_AUTH_CMD=--requirepass changeme456

# API Keys (fill in your actual values)
GITLAB_URL=https://your-gitlab-instance.com
GITLAB_ACCESS_TOKEN=your-gitlab-token
GITLAB_PROJECT_IDS=1,2,3,4,5
CLICKUP_API_TOKEN=your-clickup-token
CLICKUP_TEAM_ID=your-team-id
CLICKUP_SPACE_IDS=space1,space2
JWT_SECRET=production-secret-key-minimum-32-characters-very-secure

# Sync Configuration
SYNC_INTERVAL_MINUTES=60
AUTO_SYNC_ENABLED=true

# Network
NETWORK_NAME=userreports-network
