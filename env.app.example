# Application Only Environment Configuration
# Copy to .env for app-only use:
# cp env.app.example .env
# For external database and Redis (Google Cloud, AWS, etc.)

# Compose Profiles (apps only, no local DB/Redis)
COMPOSE_PROFILES=app

# Build Targets
BACKEND_BUILD_TARGET=backend-production
FRONTEND_BUILD_TARGET=frontend-production

# Environment
NODE_ENV=production
LOG_LEVEL=info

# Ports
FRONTEND_PORT=8080
FRONTEND_INTERNAL_PORT=8080

# External Database (replace with your external DB)
DATABASE_URL=postgresql://user:password@external-db-host:5432/userreports
DB_HOST=external-db-host
DB_PORT=5432

# External Redis (replace with your external Redis)
REDIS_HOST=external-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# API Keys (fill in your actual values)
GITLAB_URL=https://your-gitlab-instance.com
GITLAB_ACCESS_TOKEN=your-gitlab-token
GITLAB_PROJECT_IDS=1,2,3,4,5
CLICKUP_API_TOKEN=your-clickup-token
CLICKUP_TEAM_ID=your-team-id
CLICKUP_SPACE_IDS=space1,space2
JWT_SECRET=app-secret-key-minimum-32-characters-very-secure

# Sync Configuration
SYNC_INTERVAL_MINUTES=60
AUTO_SYNC_ENABLED=true

# Network
NETWORK_NAME=userreports-app-network
