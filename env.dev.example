# Development Environment Configuration
# Copy to .env for development use:
# cp env.dev.example .env

# Compose Profiles (dev includes database services + development features)
COMPOSE_PROFILES=dev,db

# Build Targets
BACKEND_BUILD_TARGET=backend-production  
FRONTEND_BUILD_TARGET=frontend-development

# Environment
NODE_ENV=development
LOG_LEVEL=debug

# Ports
FRONTEND_PORT=5173
FRONTEND_INTERNAL_PORT=5173
VITE_DEV_PORT=5173
DEBUG_PORT=9229

# Development Volume Mounts
DEV_SERVER_SRC=./server/src
DEV_SERVER_PACKAGE=./server/package.json
DEV_SERVER_TSCONFIG=./server/tsconfig.json
DEV_CLIENT_SRC=./client/src
DEV_CLIENT_PUBLIC=./client/public
DEV_CLIENT_PACKAGE=./client/package.json
DEV_CLIENT_VITE_CONFIG=./client/vite.config.ts
DEV_CLIENT_TAILWIND_CONFIG=./client/tailwind.config.js
DEV_CLIENT_POSTCSS_CONFIG=./client/postcss.config.js

# Database (local)
DATABASE_URL=postgresql://postgres:password@userreports-db:5432/userreports
POSTGRES_PASSWORD=password
POSTGRES_LOG_STATEMENT=all
POSTGRES_LOG_MIN_MESSAGES=debug1

# Redis (local, no password)
REDIS_HOST=userreports-redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_AUTH_CMD=

# Frontend Development
VITE_API_URL=http://localhost:3001/api
VITE_APP_ENV=development

# API Development Settings
CORS_ORIGIN=http://localhost:5173,http://localhost:3000,http://localhost:8080
ENABLE_PLAYGROUND=true
ENABLE_INTROSPECTION=true

# API Keys (fill in your actual values)
GITLAB_URL=https://your-gitlab-instance.com
GITLAB_ACCESS_TOKEN=your-gitlab-token
GITLAB_PROJECT_IDS=1,2,3,4,5
CLICKUP_API_TOKEN=your-clickup-token
CLICKUP_TEAM_ID=your-team-id
CLICKUP_SPACE_IDS=space1,space2
JWT_SECRET=dev-secret-key-minimum-32-characters-long

# Network
NETWORK_NAME=userreports-dev-network
